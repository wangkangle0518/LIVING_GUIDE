<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.livingguide.dao.UroleDAO">

	<resultMap id="UroleResultMap" type="com.livingguide.vo.UrolePO">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="type" column="type" />
	</resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Urole_columns">
	    <![CDATA[
		id,name,type
	    ]]>
	</sql>

	<!-- 新增 -->
	<insert id="create">
	    <![CDATA[
	        INSERT INTO u_role (
	        	id ,
	        	name ,
	        	type 
	        ) VALUES (
	        	#{id} ,
	        	#{name} ,
	        	#{type} 
	        )
	   	 ]]>
	</insert>

	<update id="update">
	    <![CDATA[
	        UPDATE u_role SET
		        name = #{name} ,
		        type = #{type} 
	        WHERE 
		        id = #{id} 
	   	 ]]>
	</update>

	<delete id="delete">
	    <![CDATA[
	        DELETE FROM u_role WHERE
	        id = #{id} 
	    ]]>
	</delete>

	<select id="getById" resultMap="UroleResultMap">
		SELECT
		<include refid="Urole_columns" />
	    <![CDATA[
		    FROM u_role 
	        WHERE 
		        id = #{id} 
	    ]]>
	</select>

	<sql id="query_where">
		<where>
			<if test="@com.livingguide.Ognl@isNotEmpty(id)">
				AND id = #{id}			</if>
			<if test="@com.livingguide.Ognl@isNotEmpty(name)">
				AND name = #{name}			</if>
			<if test="@com.livingguide.Ognl@isNotEmpty(type)">
				AND type = #{type}			</if>
		</where>
	</sql>

	<select id="queryByPage" resultMap="UroleResultMap">
		SELECT
		<include refid="Urole_columns" />
		FROM u_role
		<include refid="query_where" />
	</select>

</mapper>

